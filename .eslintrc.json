{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-underscore-dangle":  ["error", { "allow": ["_id"] }],
        "no-console": "off",
        "no-unused-vars": "warn",
        "import/extensions": ["error", "ignorePackages"],
        "linebreak-style": "off"
    },
    "plugins": ["jest"]
}
